{
    "install": "pip install -r requirements.txt",
    "start": "bash start.sh",
    "watch": {
      "install": {
        "include": [
          "^requirements\\.txt$"
        ]
      },
      "restart": {
        "include": [
          "^start\\.sh$",
          "^app\\.py$"
        ]
      },
      "throttle": 1000
    }
  }  